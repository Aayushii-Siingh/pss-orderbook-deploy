pipeline {
  agent {
    kubernetes {
        yaml """\
    apiVersion: v1
    kind: Pod
    metadata:
      labels:
        builder: promotion
    spec:
      serviceAccountName: jenkins-agent
      containers:
      - name: awscli
        image: amazon/aws-cli
        command:
        - cat
        tty: true
    """.stripIndent()
    }
  }
  stages {
    stage('Promote to PROD env') {
      steps {
          container(name: 'awscli') {
            sh '''
            #!/bin/bash
            export AWS_DEFAULT_REGION=us-east-1
            for i in $(seq $NUMBER_OF_TEAM)
            do
            TEAM="team$(printf "%02d" ${i})
            API_image=$(aws ecr list-images --repository-name production-support-course | grep "${COURSE}${TEAM}api-dev-" | sort -V | tail -1 )
            echo $API_image
            done'''
        }
      }
    }
  }
  environment {
    ECR_REPO = '108174090253.dkr.ecr.us-east-1.amazonaws.com/production-support-course'
    COURSE='c999'
    NUMBER_OF_TEAM='2'
  }
}
